<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Welcome to Your Dashboard</title>
  <style>
    
    body {
      font-family: 'Roboto', Arial, sans-serif;
      margin: 0;
      padding: 0;
      background-color: #212121;  
      color: #fff;  
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
    }
  
    
    .container {
      width: 400px;
      padding: 20px;
      background-color: #424242;  
      border-radius: 8px;
      box-shadow: 0 0 10px rgba(255, 255, 255, 0.3);  
      text-align: center;  
    }
  
   
    h1 {
      color: #00bcd4;  
    }
  
     
    .a {
      color: #03a9f4;  
      text-decoration: none;
      display: inline-block;
      margin: 10px;
      padding: 10px;
      background-color: #03a9f4;  
      color: #ffffff;  
      font-style:italic;
      font-weight: 800;
      border-radius: 4px;
      transition: background-color 0.3s ease;      }
  
    .a:hover {
      background-color: #0288d1;  
    }
    #info-button {
      background-color: #b4fa1c;  
      color: #000000;
      border: none;
      font-weight: 800;
      font-style: italic;
      
    }
    #info-button:hover{
        background-color: #ffcc00;
    }

    .user-details {
      display: none;
      margin-top: 20px;
      text-align: left;
      border: 1px solid #fff;  
      padding: 15px;
      border-radius: 8px;
      box-shadow: 0 0 8px rgba(255, 255, 255, 0.2);  
    }
    .delete-button {
  background-color: #000000;  
  color: #fff;
  border: none;
  
  cursor: pointer;
  padding: 10px;
  border-radius: 4px;
  transition-duration: 0.3s;
}

.delete-button:hover, #logout:hover {
  background-color: #b90000;  
}

.edit-button {
  background-color: #ffffff;  
  color: #000000;
  border: none;
  
  cursor: pointer;
  text-decoration: none;
  padding: 10px;
  border-radius: 4px;
  transition-duration: 0.3s;
  font-style: italic;
  margin-left: 230px;
  margin-top: 40px;
}

.edit-button:hover {
  background-color: #54db00;  
  color: #ffffff;
  box-shadow: 0 0 8px rgba(0, 0, 0, 0.2);
}

#logout {
  background-color: #E91E63;  
  font-style: oblique;
}

#logout:hover {
  background-color: #D81B60; 
}

  </style>
</head>
<body>
  <div class="container">
    <h1>Hello, <%= name %> !</h1>
    <h2>Welcome  ðŸ‘‹</h2>
    

    <a href="#" class="a" id="logout" onclick="confirmLogout()">Logout</a>
    <a href="#" class="a" onclick="showDetails()" id="info-button">User Info</a>
      
    <!-- User details display -->
    <div class="user-details" id="userDetails">

      <h2>Account Details</h2>
      <p><strong>Name:</strong> <%= name %></p>
      <p><strong>Email:</strong><%= email %></p>
       
      <div class="" style="display: flex;" >
     

      <form action="/delete" onsubmit="deleteUser(event)" method="post">
        <input type="hidden" name="name" value="<%= name %>">
        <button class="delete-button" type="submit"> Delete </button>
      </form>

      <form action="/update"  method="get">
        <input type="hidden" name="name" value="<%= name%>" >
        <a class="edit-button" href="/update?name=<%= name %>"> modified </a>
      </form>

    </div>
    </div>
  </div>

  <script>
    

    // handle logout  
    function confirmLogout() {
      const confirmLogout = confirm("Do you really want to logout?");
      if (confirmLogout) {
      
       window.location.href = "/login";
      }
    }

    function showDetails() {
      const userDetails = document.getElementById('userDetails');
      userDetails.style.display = 'block';
    }


    function deleteUser() {
      const deleteUser = confirm("Do you really want to remove the account?");
      if (deleteUser) {
      
       window.location.href = "/delete";
      }else{
       event.preventDefault();
      }
    }


    
  </script>
</body>
</html>
